---
import ProductGallery from './ProductGallery.astro';
import ProductSpecs from './ProductSpecs.astro';
import ProductDetailImages from './ProductDetailImages.astro';
import ProductCTAButtons from './ProductCTAButtons.astro';

const {
  title,
  category,
  images,
  specs,   
  detailImagePaths
} = Astro.props;
---

<section class="max-w-7xl mx-auto px-4 py-12">
  <div class="flex flex-col md:flex-row md:space-x-12 items-start">
    <!-- 📷 이미지 갤러리 -->
    <div class="w-full md:w-1/2 mb-8 md:mb-0">
      <ProductGallery images={images} />
    </div>

    <!-- 📄 제품 정보 -->
    <div class="w-full md:w-1/2">
      <p class="text-gray-600 text-base font-semibold mb-1">{category}</p>
      <h1 class="text-4xl font-bold mb-4 text-blue-600">{title}</h1>
      <ProductSpecs specs={specs} />
    </div>
  </div>
</section>

<ProductDetailImages images={detailImagePaths} />
<ProductCTAButtons />
