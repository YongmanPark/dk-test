  { name: 'DK_dial', image: '/images/products/DK_dial.png', category: '무전원 다이얼' },
  { name: 'DK_dial2', image: '/images/products/DK_dial2.png', category: '무전원 다이얼' }

];
---

<Layout metadata={metadata}>
  <section class="max-w-7xl mx-auto px-4 py-12">
    <h1 class="text-3xl font-bold mb-8 text-center">제품 소개</h1>

    <!-- 필터 탭 -->
    <div class="flex justify-center flex-wrap gap-0 mb-10 text-center text-base font-medium" id="filter-tabs">
      {categories.map((cat, index) => (
        <div class="flex items-center">
          <button
            type="button"
            class="filter-tab relative px-4 py-1 text-gray-500 hover:text-blue-600 transition"
            data-category={cat}
          >
            <span>{cat}</span>
          </button>
          {index < categories.length - 1 && (
            <span class="text-gray-300 px-2 select-none">|</span>
          )}
        </div>
      ))}
    </div>

    <!-- 제품 목록 -->
    <div id="product-grid" class="grid grid-cols-2 sm:grid-cols-2 md:grid-cols-5 gap-6 justify-center">
      {products.map((product) => (
        <a
          href={`/products/${product.name.toLowerCase()}`}
          class="product-card relative group overflow-hidden rounded-lg shadow-lg block"
          data-category={product.category}
        >
          <img
            src={product.image}
            alt={product.name}
            class="w-full h-48 object-contain p-4 bg-white transition duration-300 group-hover:blur-sm"
          />
          <div
            class="absolute inset-0 bg-black bg-opacity-40 opacity-0 group-hover:opacity-100 transition duration-300 flex flex-col justify-center items-center text-white text-center px-4"
          >
            <h3 class="text-xl font-bold mb-2">{product.name}</h3>
            <p class="text-sm">시리즈: {product.category}</p>
          </div>
        </a>
      ))}
    </div>
  </section>

  <!-- 스타일 -->
  <style>
    .filter-tab.active {
      color: #2563eb;
    }
    .filter-tab.active span {
      font-weight: 700;
      position: relative;
    }
    .filter-tab.active span::after {
      content: '';
      position: absolute;
      left: 0;
      bottom: -4px;
      width: 100%;
      height: 2px;
      background-color: #2563eb;
    }
  </style>

 
</Layout>
