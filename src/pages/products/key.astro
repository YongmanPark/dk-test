  { name: 'DK103AR', image: '/images/products/DK103AR.png', category: '시스템 전자키' },
  { name: 'DK104AR', image: '/images/products/DK104AR.png', category: '시스템 전자키' },
  { name: 'DK105AR', image: '/images/products/DK105AR.png', category: '시스템 전자키' },
  { name: 'DK201AP', image: '/images/products/DK201AP.png', category: '번호키' },
  { name: 'DK201WAP', image: '/images/products/DK201WAP.png', category: '번호키' },
