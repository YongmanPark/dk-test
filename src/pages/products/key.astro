  { name: 'DK204AP', image: '/images/products/DK204AP.png', category: '번호키' },
  { name: 'DK205AP', image: '/images/products/DK205AP.png', category: '번호키' },
  { name: 'DK206AP', image: '/images/products/DK206AP.png', category: '번호키' },
  { name: 'DK206WAP', image: '/images/products/DK206WAP.png', category: '번호키' },
  { name: 'DK207AP', image: '/images/products/DK207AP.png', category: '번호키' },
  { name: 'DK207WAP', image: '/images/products/DK207WAP.png', category: '번호키' },
